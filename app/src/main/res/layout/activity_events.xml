<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventsActivity">

    <TextView
        android:id="@+id/EventPageTV"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:paddingLeft="60dp"
        android:paddingTop="5dp"
        android:text="MESSAGE FROM CODI"
        android:textAlignment="viewStart"
        android:textColor="#119687"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/lines1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#119687"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EventPageTV" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/EventRV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EventPageTV"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/backIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:onClick="back"
        app:layout_constraintStart_toStartOf="@+id/EventPageTV"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_backarticle_normaltosca" />

    <ImageView
        android:id="@+id/searchIV"
        android:layout_width="36dp"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="@+id/EventPageTV"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/searchtosca" />

    <ImageView
        android:id="@+id/addIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchIV"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_newmediaarticle_normal2tosca" />

</androidx.constraintlayout.widget.ConstraintLayout>